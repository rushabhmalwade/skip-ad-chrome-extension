{
  "manifest_version": 3,
  "name": "YouTube Auto Skip Ads",
  "version": "1.0",
  "description": "Automatically clicks the skip ad button on YouTube.",
  "permissions": ["activeTab", "webNavigation", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
